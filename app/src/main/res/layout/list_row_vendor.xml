<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_vendor_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_vendor" />


            <TextView
                android:id="@+id/row_vendor_name"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/list_vendor_design_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/row_vendor_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/row_vendor_phone"
                android:layout_width="188dp"
                android:layout_height="17dp"
                android:layout_below="@+id/row_vendor_name"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@+id/row_vendor_icon"
                android:layout_toRightOf="@+id/row_vendor_icon"
                android:text="@string/list_vendor_design_phone"
                app:layout_constraintStart_toEndOf="@+id/row_vendor_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/row_vendor_email"
                android:layout_width="228dp"
                android:layout_height="20dp"
                android:layout_below="@+id/row_vendor_phone"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="58dp"
                android:layout_toEndOf="@+id/row_vendor_icon"
                android:layout_toRightOf="@+id/row_vendor_icon"
                android:text="@string/list_vendor_design_email"
                app:layout_constraintStart_toEndOf="@+id/row_vendor_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/row_vendor_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.517"
                app:srcCompat="@drawable/ic_settings" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>