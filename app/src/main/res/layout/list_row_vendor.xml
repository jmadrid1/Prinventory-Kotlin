<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_vendor_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="18dp"
                app:srcCompat="@drawable/ic_vendor"
                android:layout_marginStart="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/row_vendor_name"
                android:layout_width="188dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="9dp"
                android:text="@string/list_vendor_design_name"/>

            <TextView
                android:id="@+id/row_vendor_phone"
                android:layout_width="188dp"
                android:layout_height="17dp"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="28dp"
                android:text="@string/list_vendor_design_phone"/>

            <TextView
                android:id="@+id/row_vendor_email"
                android:layout_width="228dp"
                android:layout_height="20dp"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="47dp"
                android:text="@string/list_vendor_design_email"/>

            <ImageView
                android:id="@+id/row_vendor_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_settings"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>