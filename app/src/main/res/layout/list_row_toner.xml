<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_toner_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_toner"/>

            <TextView
                android:id="@+id/row_toner_make"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="9dp"
                android:text="@string/list_toner_design_make"/>

            <TextView
                android:id="@+id/row_toner_model"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="28dp"
                android:text="@string/list_toner_design_model"/>

            <TextView
                android:id="@+id/row_toner_tmodel"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="47dp"
                android:text="@string/list_toner_design_tmodel" />


            <ImageView
                android:id="@+id/row_toner_color"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_toner_row_color" />


            <ImageView
                android:id="@+id/row_toner_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_settings" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>