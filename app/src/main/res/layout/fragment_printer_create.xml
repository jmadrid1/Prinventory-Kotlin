<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background" >

    <ImageView
        android:id="@+id/fragment_printer_create_imageview_icon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/fragment_printer_create_imageview_status"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/fragment_printer_create_imageview_color"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_make"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_make"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_model"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_model"/>

    <Spinner
        android:id="@+id/fragment_printer_create_spinner_status"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"/>

    <Spinner
        android:id="@+id/fragment_printer_create_spinner_color"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_serial"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_serial"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_owner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_owner"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_dept"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_dept"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_location"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_location"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_floor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_floor"/>

    <EditText
        android:id="@+id/fragment_printer_create_edittext_ip"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_printer_ip"/>

    <Button
        android:id="@+id/fragment_printer_button_submit"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="@string/btn_save"/>

</RelativeLayout>