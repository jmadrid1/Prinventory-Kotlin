<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_printer_icon"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_printer"
                android:layout_alignBottom="@+id/row_printer_ip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/row_printer_make"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="0dp"
                android:text="@string/list_printer_design_make"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/row_printer_model"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="17dp"
                android:text="@string/list_printer_design_model"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/row_printer_dept"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="35dp"
                android:text="@string/list_printer_design_dept"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/row_printer_ip"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="53dp"
                android:text="@string/list_printer_design_ip"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/row_printer_color"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_toner_row_color" />

            <ImageView
                android:id="@+id/row_printer_status"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="272dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_status_active" />


            <ImageView
                android:id="@+id/row_printer_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_settings" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>