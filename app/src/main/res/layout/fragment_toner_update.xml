<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <EditText
        android:id="@+id/fragment_toner_update_edittext_make"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_make"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_model"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_model"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_tmodel"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textSize="20sp"
        android:hint="@string/hint_toner_model"/>

    <Spinner
        android:id="@+id/fragment_toner_update_spinner_color"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_black"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_black"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_cyan"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_cyan"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_yellow"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_yellow"/>

    <EditText
        android:id="@+id/fragment_toner_update_edittext_magenta"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="@string/hint_toner_magenta"/>

    <Button
        android:id="@+id/fragment_toner_button_submit"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="@string/btn_update"/>

</RelativeLayout>