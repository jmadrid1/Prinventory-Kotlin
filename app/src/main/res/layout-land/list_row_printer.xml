<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_printer_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/row_printer_setting"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_printer"
                tools:layout_editor_absoluteX="29dp" />

            <TextView
                android:id="@+id/row_printer_make"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/list_printer_design_make"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/row_printer_icon"
                tools:layout_editor_absoluteY="14dp" />

            <TextView
                android:id="@+id/row_printer_dept"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/list_printer_design_dept"
                app:layout_constraintStart_toEndOf="@+id/row_printer_icon"
                tools:layout_editor_absoluteY="36dp" />

            <TextView
                android:id="@+id/row_printer_ip"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="3dp"
                android:text="@string/list_printer_design_ip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/row_printer_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.882" />

            <ImageView
                android:id="@+id/row_printer_color"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/row_printer_setting"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.684"
                app:srcCompat="@drawable/ic_toner_row_color" />

            <ImageView
                android:id="@+id/row_printer_status"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/row_printer_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.684"
                app:srcCompat="@drawable/ic_status_active" />

            <ImageView
                android:id="@+id/row_printer_setting"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.692"
                app:srcCompat="@drawable/ic_settings" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>